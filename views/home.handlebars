<h1 class="page-header">&#187 Home</h1>
{{#each posts}}
<div class="post-card">
  <h3><span>{{user.username}}</span> &#8250 {{format_time date_created}}</h3>
  <h1>{{title}}</h1>
  <p>{{description}}</p>
  <p>{{comment.text}}</p>
  {{!-- ../ escapes the each statement since loggedIn isnt a property of 'posts' --}}
  {{#if ../loggedIn}}
    <a href="/comment/{{id}}">Leave a comment</a>
  {{else}}
    <a class="login-link" href="/login">Login to Comment</a>
  {{/if}}
</div>
{{/each}}